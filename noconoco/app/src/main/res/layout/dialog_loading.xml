<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:layout_centerInParent="true"
    android:padding="10dp">

	<ImageView
        android:id="@+id/noise"
        android:contentDescription="@string/none"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/sansoeil"
        android:contentDescription="@string/none"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_noco_noeye" />
    <ImageView
        android:id="@+id/oeil"
        android:contentDescription="@string/none"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_noco_eye"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/flower"
        android:contentDescription="@string/none"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_flower"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/oeil2"
        android:contentDescription="@string/none"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/sansoeil"
        android:layout_alignStart="@+id/sansoeil"
        android:layout_alignTop="@+id/sansoeil"
        android:src="@drawable/img_noco_eye"
        android:visibility="gone" />
    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sansoeil"
		android:textColor="@android:color/white"
		android:text="@string/loading_progress"
		android:gravity="center"/>
</RelativeLayout>