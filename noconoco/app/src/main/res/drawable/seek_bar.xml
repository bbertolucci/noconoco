<?xml version="1.0" encoding="utf-8"?>
<layer-list	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:id="@android:id/background">
		<shape>
			<corners
				android:radius="10dip" />
			<gradient
				android:startColor="#ffffff"
				android:centerColor="#dddddd"
				android:centerY="0.50"
				android:endColor="#ffffff"
				android:angle="270" />
		</shape>
	</item>
	<item
		android:id="@android:id/secondaryProgress">
		<clip>
			<shape>
				<corners
					android:radius="10dip" />
				<gradient
					android:startColor="@color/blue_noco_transparent"
					android:endColor="@color/blue_noco_fade"
					android:angle="90" />
			</shape>
		</clip>
	</item>
	<item
		android:id="@android:id/progress">
		<clip>
			<shape>
				<corners
					android:radius="10dip" />
				<gradient
					android:startColor="@color/blue_noco"
					android:endColor="@color/blue_noco_transparent"
					android:angle="90" />
			</shape>
		</clip>
	</item>
</layer-list>

