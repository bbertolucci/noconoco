<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
    <shape>
        <gradient
            android:startColor="#0000AAFF"
            android:endColor="#0000AAFF"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#FFFFFF" />
        <corners
            android:radius="15dp" />
        <padding
            android:left="3dp"
            android:top="1dp"
            android:right="3dp"
            android:bottom="1dp" />
    </shape>
    </item>
