<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00FFFFFF"
			/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="500dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient 
                android:startColor="@color/blue_noco_transparent"
                android:endColor="@color/blue_fb"
                android:angle="270"
                android:type="linear"
            />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="500dp" />
       </shape>
    </item>
</selector>