<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF4ADBFB"
                android:endColor="#664ADBFB"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="500dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFFFFF"
                android:endColor="#FFFFFFFF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#4ADBFB" />
            <corners
                android:radius="500dp" />
            <padding
                android:left="10dp"
                android:top="7dp"
                android:right="10dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>